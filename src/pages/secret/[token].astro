---
// src/pages/secret-[token].astro
import MainLayout from "../../layouts/MainLayout.astro";
interface Params {
  token: string;
}
const { token } = Astro.params as Params;
export async function getStaticPaths() {
  const storedToken = sessionStorage.getItem("oneTimeToken");
  return [{ params: { token: storedToken } }];
}

sessionStorage.removeItem("oneTimeToken"); // Delete immediately after check
---

<MainLayout>
  <h1>One-Time Secret Page</h1>
</MainLayout>
