---
import MainLayout from "../layouts/MainLayout.astro";
import Home from "../sections/portfolio/Home.astro";
import About from "../sections/portfolio/About.astro";
import Technologies from "../sections/portfolio/Technologies.astro";
import Projects from "../sections/portfolio/Projects.astro";
import Education from "../sections/portfolio/Education.astro";
import Footer from "../sections/portfolio/Footer.astro";
---

<MainLayout
  title="Saif Abdelrazek | Website"
  description="This is the personal website of Saif Abdelrazek, a full-stack developer. Explore my portfolio, projects, blog posts, and more."
>
  <main
    class="flex min-h-screen w-full flex-col items-center justify-center bg-blue-50 transition-colors duration-300 dark:bg-gradient-to-br dark:from-[#0f172a] dark:via-[#1e293b] dark:to-[#0a192f]"
  >
    {Home && <Home />}
    {
      !Home && (
        <div class="mx-auto max-w-5xl px-4 py-12">
          <p class="text-lg text-gray-700 dark:text-gray-300">
            Home section is currently unavailable. Please check back later.
          </p>
        </div>
      )
    }
    {About && <About />}
    {
      !About && (
        <div class="mx-auto max-w-5xl px-4 py-12">
          <p class="text-lg text-gray-700 dark:text-gray-300">
            About section is currently unavailable. Please check back later.
          </p>
        </div>
      )
    }
    {Technologies && <Technologies />}
    {
      !Technologies && (
        <div class="mx-auto max-w-5xl px-4 py-12">
          <p class="text-lg text-gray-700 dark:text-gray-300">
            Technologies section is currently unavailable. Please check back
            later.
          </p>
        </div>
      )
    }
    {Projects && <Projects />}
    {
      !Projects && (
        <div class="mx-auto max-w-5xl px-4 py-12">
          <p class="text-lg text-gray-700 dark:text-gray-300">
            Projects section is currently unavailable. Please check back later.
          </p>
        </div>
      )
    }
    {Education && <Education />}
    {
      !Education && (
        <div class="mx-auto max-w-5xl px-4 py-12">
          <p class="text-lg text-gray-700 dark:text-gray-300">
            Education section is currently unavailable. Please check back later.
          </p>
        </div>
      )
    }
    {Footer && <Footer />}
    {
      !Footer && (
        <div class="mx-auto max-w-5xl px-4 py-12">
          <p class="text-lg text-gray-700 dark:text-gray-300">
            Footer section is currently unavailable. Please check back later.
          </p>
        </div>
      )
    }
  </main>
</MainLayout>
