---
// filepath: /mnt/World/site/src/pages/biolink/index.astro
import Layout from "../../layouts/MainLayout.astro";
import Image from "astro/components/Image.astro";
---

<Layout
  title="Biolink tree | Saif Abdelrazek"
  description="Personal biolink page of Saif Abdelrazek, showcasing social links and contact information."
>
  <main
    class="mx-auto flex min-h-screen max-w-md flex-col justify-center bg-gray-900 p-6"
  >
    <section class="mb-8 text-center">
      <Image
        src="/avatar.jpg"
        alt="Your Avatar"
        class="mx-auto mb-3 h-50 w-50 rounded-full border-4 border-gray-700 shadow-lg"
        width={200}
        height={200}
      />
      <h1 class="text-2xl font-bold text-white drop-shadow">Saif Abdelrazek</h1>
      <p class="text-gray-300">Full Stack Developer</p>
    </section>
    <ul class="space-y-4">
      <li>
        <a
          href="https://linkedin.com/in/saifabdelrazek"
          class="group flex items-center rounded-lg border-2 border-blue-700 bg-blue-600 px-5 py-3 font-semibold text-white shadow-lg transition-all duration-200 hover:border-blue-400 hover:bg-blue-700"
        >
          <i
            class="fa fa-linkedin mr-3 text-xl text-white transition-colors group-hover:text-blue-200"
          ></i>
          <span class="flex-1 text-center">LinkedIn</span>
        </a>
      </li>
      <li>
        <a
          href="https://github.com/saifabdelrazek011"
          class="group flex items-center rounded-lg border-2 border-gray-700 bg-gray-800 px-5 py-3 font-semibold text-white shadow-lg transition-all duration-200 hover:border-gray-400 hover:bg-gray-700"
        >
          <i
            class="fa fa-github mr-3 text-xl text-white transition-colors group-hover:text-gray-300"
          ></i>
          <span class="flex-1 text-center">GitHub</span>
        </a>
      </li>
      <li>
        <a
          href="mailto:saif@saifabdelrazek.com"
          class="group flex items-center rounded-lg border-2 border-sky-600 bg-sky-500 px-5 py-3 font-semibold text-white shadow-lg transition-all duration-200 hover:border-sky-300 hover:bg-sky-700"
        >
          <i
            class="fa fa-envelope mr-3 text-xl text-white transition-colors group-hover:text-sky-200"
          ></i>
          <span class="flex-1 text-center">Email</span>
        </a>
      </li>
    </ul>
  </main>
</Layout>
