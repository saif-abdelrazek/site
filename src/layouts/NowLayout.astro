---
import MainLayout from "./MainLayout.astro";

interface Props {
  title?: string;
  description?: string;
}

const { title = "Now", description = "What I'm focused on right now." } =
  Astro.props;
---

<MainLayout {title} {description}>
  <div
    class="min-h-screen w-full bg-blue-50 transition-colors duration-300 dark:bg-gradient-to-br dark:from-[#0f172a] dark:via-[#1e293b] dark:to-[#0a192f]"
  >
    <main class="container mx-auto px-4 py-12">
      <div
        class="prose prose-headings:text-blue-700 prose-h2:mt-8 prose-h2:mb-4 prose-h2:text-2xl prose-h2:font-semibold prose-h2:border-b prose-h2:border-blue-100 prose-h2:pb-2 dark:prose-invert dark:prose-headings:text-sky-200 dark:prose-h2:border-sky-900 mx-auto max-w-4xl"
      >
        <slot />
      </div>
    </main>
  </div>
</MainLayout>
