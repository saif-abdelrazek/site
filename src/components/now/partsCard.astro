---
interface Props {
  title: string;
  icon?: string;
  class?: string;
}

const { title, icon, class: className } = Astro.props;
---

<div
  class={[
    "flex flex-col justify-between rounded-2xl border border-sky-800 bg-gradient-to-br from-slate-900/80 via-slate-800/80 to-slate-900/60 p-4 shadow-xl backdrop-blur-md transition-transform duration-200 hover:-translate-y-1 hover:scale-[1.03] hover:shadow-blue-900/30",
    className,
  ].join(" ")}
>
  <div class="mb-2 flex items-center gap-2 border-b border-sky-900/40 pb-1">
    {icon && <span class={icon + " text-xl text-sky-400"} />}
    <h3 class="text-lg font-semibold text-sky-200">{title}</h3>
  </div>
  <div class="text-base text-sky-100">
    <slot />
  </div>
</div>
