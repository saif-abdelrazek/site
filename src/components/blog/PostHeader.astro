---
import { Image } from "astro:assets";
import type { CollectionEntry } from "astro:content";

interface Props {
  post: CollectionEntry<"posts">;
}
const { post } = Astro.props as Props;
---

<header class="relative h-80 w-full md:h-[28rem]">
  {
    post.data.image && (
      <Image
        src={post.data.image}
        alt={"Blog Post Header Image: " + post.data.title}
        class="h-full w-full object-cover"
        style="position: absolute; inset: 0; z-index: 1;"
      />
    )
  }
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/40 to-transparent dark:from-[#0f172a]/80 dark:to-transparent"
    style="z-index: 2;"
  >
  </div>
  <!-- Return button overlay, top-left -->
  <div class="absolute top-4 left-4 z-10">
    <a
      href="/blog"
      class="rounded-lg bg-blue-600 px-4 py-2 text-base font-semibold text-white shadow transition hover:bg-blue-500 dark:bg-sky-700 dark:hover:bg-sky-500"
    >
      ‚Üê Return to Blog
    </a>
  </div>
</header>
