---
// filepath: /mnt/World/site/src/components/blog/PostHeader.astro
interface Props {
  image?: {
    src?: string;
    alt?: string;
  };
}
const { image } = Astro.props as Props;
---

<header class="relative h-80 w-full md:h-[28rem]">
  {image?.src && (
    <img
      src={image.src}
      alt={image.alt || ""}
      class="absolute inset-0 h-full w-full object-cover object-center"
      style="z-index: 1;"
      loading="lazy"
    />
  )}
  <div
    class="absolute inset-0 bg-gradient-to-b from-black/40 to-transparent dark:from-[#0f172a]/80 dark:to-transparent"
    style="z-index: 2;"
  ></div>
  <!-- Return button overlay, top-left -->
  <div class="absolute left-4 top-4 z-10">
    <a
      href="/blog"
      class="rounded-lg bg-blue-600 px-4 py-2 text-base font-semibold text-white shadow transition hover:bg-blue-500 dark:bg-sky-700 dark:hover:bg-sky-500"
    >
      ‚Üê Return to Blog
    </a>
  </div>
</header>