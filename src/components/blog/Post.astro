---
import type { CollectionEntry } from "astro:content";
interface PostProps {
  post: CollectionEntry<"posts">;
}
const { post } = Astro.props as PostProps;
const { Content } = await post.render();
import { Image } from "astro:assets";
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg p-8 border border-slate-200">
  <header class="mb-8">
    <h1 class="text-4xl font-extrabold text-slate-900 dark:text-white mb-2">{post.data.title}</h1>
    <div class="flex items-center gap-4 text-sm text-slate-500 mb-4">
      <span>{post.data.date?.toLocaleDateString?.() ?? "Unknown date"}</span>
      {post.data.tags && (
        <span class="flex flex-wrap gap-2">
          {post.data.tags.map(tag => (
            <span class="bg-slate-200 text-slate-700 px-2 py-0.5 rounded text-xs font-medium">{tag}</span>
          ))}
        </span>
      )}
    </div>
    {post.data.image && (
      <Image src={post.data.image} alt={post.data.title} class="w-full h-56 object-cover rounded-lg border mb-2" />
    )}
    {post.data.description && (
      <p class="text-lg text-slate-600 dark:text-slate-300">{post.data.description}</p>
    )}
  </header>
  <div class="prose prose-slate lg:prose-xl max-w-none dark:prose-invert">
    <Content />
  </div>
</article>